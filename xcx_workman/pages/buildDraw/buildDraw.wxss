/* pages/buildDraw/buildDraw.wxss */
.top {
  width: 94%;
  padding: 3%;
}
/* 搜索 */
.top-search {
  width: 100%;
}
.top-title-right {
  width: 75%;
  height: 60rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 8rpx;
  line-height: 60rpx;
}
.top-title-right-img {
  width: 10%;
  text-align: center;
}
.search-img {
  width: 26rpx;
  height: 26rpx;
}
.top-title-right-shuru {
  width: 70%;
}
.shurukuang {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}
.top-title-right-sousuo {
  /* width: 17%; */
  margin-right: 3%;
}
.sousuo-button {
  width: 94rpx;
  height: 44rpx;
  border-radius: 8rpx;
  border: 2rpx solid rgba(224, 35, 35, 1);
  line-height: 44rpx;
  margin-top: 8rpx;
  color: #e02323;
  text-align: center;
  font-size: 28rpx;
}

.xiala-img {
  width: 20rpx;
  height: 18rpx;
  margin-left: 10rpx;
}
.top-class{
  width: 100%;
}
.top-class-item{
  padding-left: 10rpx;
}
.scroll-x{
  height:80rpx;
  white-space:nowrap;
  display:flex;
  /* background-color: rgba(102, 102, 102, 1); */
}
/* 隐藏scrollbar */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.view-parent{
  display:inline-block;
}
.view-item{
  width:180rpx;
  height:52rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:28rpx;
  color:#000;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(111, 119, 140, 0.18);
  margin: 10px 10px 10px 0px;
  border-radius: 4rpx;
}
.bottom {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-bottom: 30rpx;
  width: 100%;
  overflow-x: hidden;
}
.left {
  display: flex;
  flex-direction: column;
  width: 45.5%;
  margin-left: 3%;
  margin-right: 1.5%;
  justify-content: flex-start;
}

.right {
  display: flex;
  flex-direction: column;
  width: 45.5%;
  margin-right: 3%;
  margin-left: 1.5%;
  justify-content: flex-start;
}
.show {
  margin-bottom: 25rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 12rpx 0rpx rgba(45, 49, 61, 0.1);
}
.show-item-top {
  width: 100%;
  text-align: center;
}
.show-img {
  width: 100%;
  height: 398rpx;
}
.top-search-fabu {
  width: 25%;
  text-align: right;
}
.fabu-img {
  width: 160rpx;
  height: 60rpx;
}
.show-item-bottom {
  width: 100%;
  /* height: 82rpx;
  line-height: 82rpx; */
}
.goods-name {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  width: 94%;
  margin-left: 3%;
  margin-right: 3%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2; 
  -webkit-box-orient: vertical;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
}

/* 分类弹窗 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 10000;
  color: #fff;
}

.commodity_attr_box {
  position: fixed;
  z-index: 20000;
  justify-content: center;
  bottom: 0;
  width: 100%;
  height: 730rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.tankuang {
  width: 100%;
  height: 730rpx;
  background: #fff;
  border-radius: 20rpx;
  margin: auto;
}

.tankuang-top {
