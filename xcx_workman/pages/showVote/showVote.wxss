  text-align: center;
  right: 32rpx;
  top: 116rpx;
}

.img-class {
  width: 100%;
}

.hengxian {
  width: 100%;
  height: 10rpx;
  background-color: #999999;
}

.content-bottom {
  margin-bottom: 50rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(111, 119, 140, 0.18);
  border-radius: 8rpx;
}

.update-button {
  width: 100rpx;
  /* height: 80rpx; */
