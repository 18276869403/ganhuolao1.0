/* pages/showVote/showVote.wxss */
page{
  background: #f5f7fb;
}
.content{
  width: 94%;
  padding: 0rpx 3%;
  padding-top: 20rpx;
}
.content-top{
  height: 180rpx;
  line-height: 60rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(111, 119, 140, 0.18);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding-left: 2%;
}

.top-title{
  width: 100%;
}
.top-title-left{
  width: 100%;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.top-title-right{
  width: 20%;
  font-size: 28rpx;
}
.top-date{
  width: 100%;
  font-size: 28rpx;
  /* text-align: right; */
  color: #696969;
}
.top-date-left{
  width: 70%;
}
.top-date-right{
  width: 30%;
  padding-top: 30rpx;
}
.img-class{
  width: 100%;
}
.hengxian{
  width: 100%;
  height: 10rpx;
  background-color: #999999;
}
.content-bottom{
  margin-bottom: 50rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(111, 119, 140, 0.18);
  border-radius: 8rpx;
}
.update-button {
  width: 179rpx;
  /* height: 80rpx; */
  border-radius: 4rpx;
  border: 2rpx solid #38bdf1;
  /* line-height: 80rpx; */
  text-align: center;
  font-size: 15px;
  color: #fff;
  background: #38bdf1;
}
.activity-img{
  width: 199rpx;
  height: 99rpx;
  margin-top: -10rpx;
}