  white-space: nowrap;
}

.top-title-right {
  width: 20%;
  font-size: 28rpx;
}

.top-date {
  width: 100%;
  font-size: 28rpx;
  /* text-align: right; */
  color: #696969;
}

.top-date-left {
  width: 64%;
}

.top-date-right {
  /* width: 36%; */
