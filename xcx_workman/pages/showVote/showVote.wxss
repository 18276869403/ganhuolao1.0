}

.content {
  width: 94%;
  padding: 0rpx 3%;
  padding-top: 20rpx;
}

.content-top {
  /* height: 600rpx; */
  line-height: 50rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(111, 119, 140, 0.18);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding-left: 3%;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

.top-title {
  width: 100%;
}

.top-title-left {
  width: 100%;
